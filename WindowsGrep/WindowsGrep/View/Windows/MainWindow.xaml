<Window x:Class="WindowsGrep.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsGrep.View.Windows"
        mc:Ignorable="d"
        Title="Windows Grep" Height="450" Width="800" Background="Black" Loaded="Window_Loaded"  Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4"/>
        </Grid.ColumnDefinitions>

        <!--Row 1-->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Background="Transparent" VerticalScrollBarVisibility="Auto">
            <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ConsoleLogCollection}" Foreground="White" Background="Transparent" BorderThickness="0"/>
        </ScrollViewer>
    </Grid>
</Window>
